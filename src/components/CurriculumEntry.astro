---
const { header, content, description, time } = Astro.props;
---

<div box-="square" shear-="both" class="bottom-margin">
    <div class="header-top">
        <span>{header}</span>
    </div>
    <div id="content" class="main-content">
        <p>{description}</p>
        <p>&nbsp;</p>
        <ul marker-="bullet">
            {
                Array.isArray(content) &&
                    content.map((item) => (
                        <li class="justified-paragraph">{item}</li>
                    ))
            }
        </ul>
    </div>
    <div class="header-bottom">
        <span is-="badge" cap-="triangle" variant-="foreground1">{time}</span>
    </div>
</div>

<style>
    .bottom-margin {
        margin-bottom: 2ch;
    }
    .main-content {
        padding: 2ch;
    }
</style>
